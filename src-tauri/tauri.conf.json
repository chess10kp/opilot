{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "opilot",
    "version": "0.1.0",
    "identifier": "com.opilot.dev",
    "build": {
        "frontendDist": "../out",
        "devUrl": "http://localhost:3000",
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build"
    },
    "app": {
        "windows": [
            {
                "decorations": false,
                "title": "opilot_sidebar",
                "resizable": false,
                "fullscreen": false,
                "maximizable": false,
                "minimizable": false,
                "closable": false
        
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
